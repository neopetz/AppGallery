<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Activity_developer">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/background"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DEVELOPERS"
                android:fontFamily="@font/proximat"
                android:textSize="30sp"
                android:textColor="#B0000000"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/image"
                android:layout_marginTop="50dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/aalex"
                />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="105dp"
                android:fontFamily="@font/proximab"
                android:textColor="#B0000000"
                android:layout_toEndOf="@id/image"
                android:padding="5dp"
                android:layout_marginStart="7dp"
                android:text="Verzosa \nAlexander T."
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proximar"
                android:gravity="center"
                android:text="BSIT 4A"
                android:textColor="#B0000000"
                android:layout_toEndOf="@id/image"
                android:padding="5dp"
                android:layout_marginStart="7dp"
                android:layout_below="@id/textView13"
                 />

            <ImageView
                android:id="@+id/jeloimage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ajelo"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:layout_below="@id/image"/>

            <TextView
                android:id="@+id/jelotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Santiago\nAngelou A."
                android:fontFamily="@font/proximab"
                android:textSize="17sp"
                android:textColor="#B0000000"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@id/jeloimage"
                android:layout_marginTop="327dp"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BSIT 4A"
                android:layout_marginStart="7dp"
                android:fontFamily="@font/proximar"
                android:textColor="#B0000000"
                android:layout_below="@id/jelotext"
                android:layout_toEndOf="@id/jeloimage"
                android:padding="5dp"
                />

            <ImageView
                android:id="@+id/jaysonimage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/aajayson"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:layout_below="@id/jeloimage"/>

            <TextView
                android:id="@+id/jasyontext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jose\nJayson P."
                android:textColor="#B0000000"
                android:fontFamily="@font/proximab"
                android:textSize="17sp"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@id/jaysonimage"
                android:layout_marginTop="555dp"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BSIT 4A"
                android:fontFamily="@font/proximar"
                android:layout_below="@id/jasyontext"
                android:textColor="#B0000000"
                android:layout_toEndOf="@id/jaysonimage"
                android:layout_marginStart="7dp"
                android:padding="5dp"
                />

            <ImageView
                android:id="@+id/gioimage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/aagio"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:layout_below="@id/jaysonimage"/>

            <TextView
                android:id="@+id/giotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Herrera\nAngelo C."
                android:fontFamily="@font/proximab"
                android:textSize="17sp"
                android:textColor="#B0000000"
                android:layout_marginStart="7dp"
                android:layout_toEndOf="@id/gioimage"
                android:layout_marginTop="770dp"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BSIT 4A"
                android:layout_marginStart="7dp"
                android:fontFamily="@font/proximar"
                android:layout_below="@id/giotext"
                android:textColor="#B0000000"
                android:layout_toEndOf="@id/gioimage"
                android:padding="5dp"
                />

            <ImageView
                android:id="@+id/reyimage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/aareymundo"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:layout_below="@id/gioimage"/>

            <TextView
                android:id="@+id/reytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B0000000"
                android:text="Robles\nReymundo H."
                android:layout_marginStart="7dp"
                android:fontFamily="@font/proximab"
                android:textSize="17sp"
                android:layout_toEndOf="@id/reyimage"
                android:layout_marginTop="990dp"
                android:padding="5dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B0000000"
                android:text="BSIT 4A"
                android:fontFamily="@font/proximar"
                android:layout_marginStart="7dp"
                android:layout_below="@id/reytext"
                android:layout_toEndOf="@id/reyimage"
                android:padding="5dp"
                />

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>

</RelativeLayout>